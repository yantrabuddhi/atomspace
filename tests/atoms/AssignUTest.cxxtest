#include <opencog/atomspace/Atom.h>
#include <opencog/atomspace/AtomSpace.h>
#include <opencog/atoms/core/AssignLink.h>

using namespace opencog;

// Test the assert/retract links.
//
class AssignUTest :  public CxxTest::TestSuite
{
private:

public:
	AssignUTest()
	{
		logger().setPrintToStdoutFlag(true);
	}

	void setUp() {}

	void tearDown() {}

	void testInsert();
	void testRemove();
	void testAssign();
};

// Test InsertLink
void AssignUTest::testInsert()
{
	logger().info("BEGIN TEST: %s", __FUNCTION__);
	AtomSpace as;

	TS_ASSERT(as.get_size() == 0);

#define an as.add_node
#define al as.add_link

	// Create an InsertLink
	Handle hna = al(INSERT_LINK,
		an(TYPE_NODE, "EvaluationLink"),
		an(PREDICATE_NODE, "bogosity"),
		al(LIST_LINK,
			an(CONCEPT_NODE, "fiddle"),
			an(CONCEPT_NODE, "faddle")));

	TS_ASSERT(as.get_size() == 6);

	// Arghh.  The cast should have been enough, but we currently
	// can't store these in the atomspace, due to circular shared
	// lib dependencies.
	InsertLinkPtr alp = InsertLinkCast(hna);
	if (NULL == alp)
		alp = createInsertLink(*LinkCast(hna));
	TS_ASSERT(alp != NULL);

	alp->execute(&as);

	HandleSeq hs;
	as.get_handles_by_type(hs, EVALUATION_LINK);

	TS_ASSERT(hs.size() == 1);
	LinkPtr lp = LinkCast(hs[0]);

	TS_ASSERT(lp->getOutgoingAtom(0) == an(PREDICATE_NODE, "bogosity"));

	Handle ll =
		al(LIST_LINK,
			an(CONCEPT_NODE, "fiddle"),
			an(CONCEPT_NODE, "faddle"));

	TS_ASSERT(lp->getOutgoingAtom(1) == ll);

	logger().info("END TEST: %s", __FUNCTION__);
}

// Test RemoveLink
void AssignUTest::testRemove()
{
	logger().info("BEGIN TEST: %s", __FUNCTION__);
	AtomSpace as;

	TS_ASSERT(as.get_size() == 0);

	// Create some links
	al(EVALUATION_LINK,
		an(PREDICATE_NODE, "bogosity"),
		al(LIST_LINK,
			an(CONCEPT_NODE, "fiddle"),
			an(CONCEPT_NODE, "faddle")));

	al(EVALUATION_LINK,
		an(PREDICATE_NODE, "bogosity"),
		al(LIST_LINK,
			an(CONCEPT_NODE, "major"),
			an(CONCEPT_NODE, "minor")));

	al(EVALUATION_LINK,
		an(PREDICATE_NODE, "bogosity"),
		al(LIST_LINK,
			an(CONCEPT_NODE, "quintuplets"),
			an(CONCEPT_NODE, "misdemenor")));

	TS_ASSERT(as.get_size() == 1+4+4+4);

	// Create a RemoveLink
	Handle hna = al(REMOVE_LINK,
		an(TYPE_NODE, "EvaluationLink"),
		an(PREDICATE_NODE, "bogosity"),
		al(LIST_LINK,
			an(CONCEPT_NODE, "quintuplets"),
			an(CONCEPT_NODE, "misdemenor")));

	TS_ASSERT(as.get_size() == 1+4+4+4+2);

	RemoveLinkPtr rlp = RemoveLinkCast(hna);
	if (NULL == rlp)
		rlp = createRemoveLink(*LinkCast(hna));
	TS_ASSERT(rlp != NULL);

	rlp->execute(&as);
	TS_ASSERT(as.get_size() == 1+4+4+3+2);

	logger().info("END TEST: %s", __FUNCTION__);
}

// Test AssignLink
void AssignUTest::testAssign()
{
	logger().info("BEGIN TEST: %s", __FUNCTION__);
	AtomSpace as;

	TS_ASSERT(as.get_size() == 0);

	// Create some links
	al(EVALUATION_LINK,
		an(PREDICATE_NODE, "bogosity"),
		al(LIST_LINK,
			an(CONCEPT_NODE, "fiddle"),
			an(CONCEPT_NODE, "faddle")));

	al(EVALUATION_LINK,
		an(PREDICATE_NODE, "bogosity"),
		al(LIST_LINK,
			an(CONCEPT_NODE, "major"),
			an(CONCEPT_NODE, "minor")));

	al(EVALUATION_LINK,
		an(PREDICATE_NODE, "bogosity"),
		al(LIST_LINK,
			an(CONCEPT_NODE, "quintuplets"),
			an(CONCEPT_NODE, "misdemenor")));

	TS_ASSERT(as.get_size() == 1+4+4+4);

	// Create an AssignLink
	Handle hna = al(ASSIGN_LINK,
		an(TYPE_NODE, "EvaluationLink"),
		an(PREDICATE_NODE, "bogosity"),
		al(LIST_LINK,
			an(CONCEPT_NODE, "trans"),
			an(CONCEPT_NODE, "neptunium")));

	TS_ASSERT(as.get_size() == 1+4+4+4+5);

	// There are three, not four eval links
	HandleSeq evhs;
	as.get_handles_by_type(evhs, EVALUATION_LINK);
	TS_ASSERT(evhs.size() == 3);

	AssignLinkPtr rlp = AssignLinkCast(hna);
	if (NULL == rlp)
		rlp = createAssignLink(*LinkCast(hna));
	TS_ASSERT(rlp != NULL);

	rlp->execute(&as);
	TS_ASSERT(as.get_size() == 1+3+3+3+4+2);

/*******
	HandleSeq hs;
	as.getHandlesByType(hs, LINK, true);
	for (Handle h : hs)
		printf("Have %s\n", h->toShortString().c_str());
*****/

	HandleSeq pehs;
	as.get_handles_by_type(pehs, EVALUATION_LINK);
	TS_ASSERT(pehs.size() == 1);

	LinkPtr lp = LinkCast(pehs[0]);

	TS_ASSERT(lp->getOutgoingAtom(0) == an(PREDICATE_NODE, "bogosity"));

	Handle ll =
		al(LIST_LINK,
			an(CONCEPT_NODE, "trans"),
			an(CONCEPT_NODE, "neptunium"));

	TS_ASSERT(lp->getOutgoingAtom(1) == ll);

	logger().info("END TEST: %s", __FUNCTION__);
}
